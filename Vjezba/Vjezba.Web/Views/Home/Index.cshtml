@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html>

<head>
    <title>Create a hero image</title>

    <style>
        .gfg {
            filter: blur(5px);
            width: 100%;
        }

        .logo {
            text-align: center;
            position: absolute;
            font-size: 18px;
            top: 200px;
            left: 17%;
            background-color: white;
            padding:2%;
            border-radius: 12px;
        }

        h4,
        p {
            border: 4px solid white;
            padding: 10px 50px;
            position: relative;
            border-radius: 10px;
            font-family: Arial, Helvetica, sans-serif;
        }

            h4:hover {
                background: -webkit-linear-gradient(lightblue, lightblue);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }

        .logo button {
            border: none;
            outline: 0;
            display: inline-block;
            padding: 10px 55px;
            color: white;
            background-color: lightblue;
            text-align: center;
            cursor: pointer;
            border-radius: 12px;
        }

            .logo button:hover {
                background-color: lightblue;
                color: white;
            }
    </style>
</head>

<body>
    <div class="container">

        <img class="gfg" src="https://static.vinted.com/assets/seller-promotion/other/banner-wide-1ca50d3217a3d2402dda712a8e79af381c4bd7cd5cceb0a0b7be17ac2c7522d8.jpg">

        <div class="logo">
            <h4>Jeste li spremni raščistiti<br /> svoj ormar?</h4>
            <button>Pogledaj ponudu!</button>
            <p>
                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Register">Postani korisnik</a>
            </p>
        </div>
    </div>
</body>

</html>